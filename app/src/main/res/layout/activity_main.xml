<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.shrekcalculator5.MainActivity"
    android:background="@drawable/damnshrek2"
    android:id="@+id/layout1"
    >



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/text"
            android:layout_width="match_parent"
            android:layout_height="160sp"
            android:layout_marginLeft="20sp"
            android:layout_marginTop="10sp"
            android:fontFamily="casual"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="40sp" />

        <LinearLayout
            android:id="@+id/keypad_up"
            android:layout_marginTop="10sp"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:orientation="horizontal">


            <Button
                android:id="@+id/seven"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/rex"
                android:textSize="40sp"
                android:text="7" />

            <Button
                android:id="@+id/eight"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/rex"
                android:textSize="40sp"
                android:text="8" />

            <Button
                android:id="@+id/nine"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/rex"
                android:textSize="40sp"
                android:text="9" />

            <Button
                android:id="@+id/division"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/rex"
                android:textSize="40sp"
                android:text="/" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/upp"
            android:layout_marginTop="0dp"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="horizontal">


            <Button
                android:id="@+id/four"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/rex"
                android:textSize="40sp"
                android:text="4" />

            <Button
                android:id="@+id/five"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/rex"
                android:textSize="40sp"
                android:text="5" />

            <Button
                android:id="@+id/six"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/rex"
                android:textSize="40sp"
                android:text="6" />

            <Button
                android:id="@+id/multiply"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/rex"
                android:textSize="40sp"
                android:text="x" />

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="0dp"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="horizontal">


            <Button
                android:id="@+id/one"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/rex"
                android:textSize="40sp"
                android:text="1" />

            <Button
                android:id="@+id/two"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/rex"
                android:textSize="40sp"
                android:text="2" />

            <Button
                android:id="@+id/three"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/rex"
                android:textSize="40sp"
                android:text="3" />

            <Button
                android:id="@+id/plus"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/rex"
                android:textSize="40sp"
                android:text="+" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/up"
            android:layout_marginTop="0dp"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="horizontal">


            <Button
                android:id="@+id/zero"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/rex"
                android:textSize="40sp"
                android:text="0" />

            <Button
                android:id="@+id/change"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/rex"
                android:textSize="15sp"
                android:text="change" />

            <Button

                android:id="@+id/reset"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/rex"
                android:textSize="20sp"
                android:text="Del" />

            <Button
                android:id="@+id/minus"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/rex"
                android:textSize="40sp"
                android:text="-" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="300sp"
            android:layout_height="90sp"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <Button

                android:id="@+id/equals"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="100"
                android:background="@drawable/rex"
                android:textSize="40sp"
                android:text="="/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>




